<h1><%= @song.title %></h1>

<h2><%= @song.genre %></h2>
<h2><%= @song.artist_name %></h2>

<% if @song.released %>
  <h3>Released <%= @song.release_year %></h3>
<% end %>

<%= link_to 'Edit', edit_song_path(@song) %>
<%= link_to 'Delete', "/songs/#{@song.id}", method: :delete, data: { confirm: "Are you sure you want to delete song #{@song.title}?" } %>